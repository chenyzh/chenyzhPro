<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="dialog_notice" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> 
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowIsFloating">true</item> 
        <item name="android:windowIsTranslucent">false</item> 
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item> 
    </style>

    <style name="dialog_style">
        <item name="android:windowEnterAnimation">@anim/anim_view_in</item>
        <item name="android:windowExitAnimation">@anim/anim_view_out</item>
    </style>

</resources>
